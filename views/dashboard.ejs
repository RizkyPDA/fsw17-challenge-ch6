<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partial/head') %>
    <link rel="stylesheet" href="/dist/css/custom-style.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container">
          <a class="navbar-brand text-white logo" href="#page1">Welcome, <%= name %> </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"></button>
          
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
              <li class="nav-item"><a class="nav-link menu-top-link" href="/profile"><%= name %></a> </li>
              <li class="nav-item"><a class="nav-link menu-top-link btn-danger btn-lg"  href="/logout">Log out</a></li>
          </div>
        </div>
      </nav>

    <div class="container mt-5">
      <h1 class="text-center mt-5">ADMIN PAGE</h1>
      <% if(loginMessage){ %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= loginMessage %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } else{ %> <% } %>

      <!-- <table class="table table-striped table-hover table-bordered border-dark" id="table_id"> -->
      <table class="table" id="table_id">
        <thead class="text-center">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Username</th>
            <th scope="col">Fullname</th>
            <th scope="col">Email</th>
            <th scope="col">Nationality</th>
            <th scope="col">Match</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1 %> <% data.forEach(item => { %>
          <tr>
            <td class="text-center"><%= i %></td>
            <td><% if(item.username) { %> <%= item.username %> <% } else { %><span class="badge bg-warning text-dark">not filled in by user</span><% } %></td>
            <td><% if(item.fullname) { %> <%= item.fullname %> <% } else { %><span class="badge bg-warning text-dark">not filled in by user</span><% } %></td>
            <td><% if(item.email) { %> <%= item.email %> <% } else { %><span class="badge bg-warning text-dark">not filled in by user</span><% } %></td>
            <td><% if(item.nationality) { %> <%= item.nationality %> <% } else { %><span class="badge bg-warning text-dark">not filled in by user</span><% } %></td>
            <td class="text-center">
              <a class="btn btn-info" href="/dashboard/statistic/<%= item.uuid %> ">Detail</a>
            </td>
            <td class="text-center">
              <form action="delete/ <%= item.uuid %> " method="post">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <a href="/edit/<%= item.uuid %>" class="btn btn-warning">Edit</a>
                  <a href="/delete/<%= item.uuid %>" class="btn btn-danger me-4">Delete</a>
                </div>
              </form>
            </td>
          </tr>
          <% i++ %> <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
